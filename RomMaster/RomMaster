#!/bin/bash
# shellcheck disable=SC2120,2094,2096

set -eE -o functrace

# RomMaster
# https://github.com/travis134/RomMaster
# Description : main script
#

#
# Environment settings
#
export TERM=linux
sudo_prefix="sudo"
# check whether sudo is needed
if [[ "${EUID}" = 0 ]]; then
  sudo_prefix=""
fi
local=1
if [[ "${local}" = 1 ]]; then
    device=/dev/pts/6
else
    device=/dev/tty1
fi
${sudo_prefix} chmod 666 "${device}"
${sudo_prefix} chmod 666 /dev/uinput
shopt -s extglob # required for extented pattern recognition

log() {
    local message
    local ts

    message=$1
    ts=$(date +"%Y-%m-%dT%H:%M:%S%z")

    echo "${ts}: ${message}" >&2
}

# Reads config JSON in which contains information about supported systems, the
# expected extensions for suitable roms, and query overrides for better search
# results.
read_config() {
    local config

    config=$(cat config.json)

    echo "${config}"
}

# Reads a JSON array item by index. Mostly used with dialogs for mapping choice
# indices back to data.
get_by_index() {
    local elements
    local desired_index
    local desired

    elements=$1
    desired_index=$2

    desired=$(echo "${elements}" \
        | jq --arg desired_index "${desired_index}" .["${desired_index}"]
    )

    echo "${desired}"
}

# Creates a query string for eliminating results for all systems except for
# the system desired.
create_query() {
    local base_query
    local systems
    local desired
    local desired_id
    local query
    local retain

    base_query=$1
    systems=$2
    desired=$3

    desired_id=$(echo "${desired}" \
        | jq -r '.id'
    )
    query=${base_query}
    query+=" AND "
    query+=$(echo "${desired}" \
        | jq -r '.query'
    )
    retain=$(echo "${desired}" \
        | jq '.retain'
    )

    query+=" AND subject:("
    # Avoid over filtering if the system name is a substring of desired,
    # i.e. if we want "snes" we wouldn't want to filter out "nes" because.
    # all "snes" entries would also be eliminated.
    query+=$(echo "${systems}" \
        | jq -r --arg desired_id "${desired_id}" --arg retain "${retain}" '.
            | map(
                select((.id | inside($desired_id)) or (.id | inside($retain)) | not)
                | "NOT \(.id)")
            | join(" AND ")'
    )
    query+=")"

    # We need to URL encode the special characters using jq.
    echo -n "${query}" \
        | jq -sRr @uri
}

# Searches for items that are compatible with a given system.
search_system() {
    local base_query
    local systems
    local desired
    local name
    local query
    local sort
    local projection
    local search_url
    local response
    local results
    local results_count

    base_query=$1
    systems=$2
    desired=$3

    name=$(echo "${desired}" \
        | jq -r .name)

    log "Searching items for system: ${name}"

    query=$(create_query "${base_query}" "${systems}" "${desired}")
    sort="downloads+desc"
    projection="identifier,title"
    search_url="https://archive.org/advancedsearch.php?output=json&q=${query}&fl[]=${projection}&sort[]=${sort}"

    log "Searching with url: ${search_url}"

    # Response body is JSON data formatted as:
    # {
    #   "response": {
    #     "docs": [
    #       {
    #         "identifier": "foo",
    #         "title": "bar"
    #       },
    #       ...
    #     ],
    #     ...
    #   },
    #   ...
    # }
    # 
    response=$(curl -s "${search_url}")
    results=$(echo "${response}" \
        | jq .response.docs
    )
    results_count=$(echo "${results}" \
        | jq '. | length'
    )
    log "Found ${results_count} matching items for ${name}"

    echo "${results}"
}

# Lists files within a given item.
list_files() {
    local system
    local item
    local ext
    local item_id
    local metadata_url
    local response
    local results
    local results_count

    system=$1
    item=$2

    ext=$(echo "${system}" \
        | jq -r .ext
    )
    item_id=$(echo "${item}" \
        | jq -r .identifier
    )

    metadata_url="https://archive.org/metadata/${item_id}"

    log "Loading metadata with url: ${metadata_url}"

    # Response body is JSON data formatted as:
    # {
    #   "files": [
    #     {
    #       "name": "foo",
    #       "size": "bar",
    #       ...
    #     },
    #   ...
    #   ],
    #   ...
    # }
    response=$(curl -s "${metadata_url}")
    results=$(echo "${response}" \
        | jq -r --arg ext "${ext}" '.files
            | map(
                select(.name | split(".")[-1] | inside($ext))
                | {name: .name, size: .size})'
    )
    results_count=$(echo "${results}" \
        | jq '. | length'
    )
    log "Found ${results_count} matching files in ${item_id}"

    echo "${results}"
}

# Download a given file to its corresponding system folder.
download_file() {
    local base_path
    local system
    local item
    local file
    local item_id
    local name
    local name_uri
    local download_url
    local download_path

    base_path=$1
    system=$2
    item=$3
    file=$4

    item_id=$(echo "${item}" \
        | jq -r .identifier
    )
    name=$(echo "${file}" \
        | jq -r .name
    )
    # We need to URL encode the special characters using jq.
    name_uri=$(echo -n "${name}" \
        | jq -sRr @uri
    )
    download_url="https://archive.org/download/${item_id}/${name_uri}"
    system_path=$(echo "${system}" \
        | jq -r .path)
    download_path="${base_path}${system_path}/${name}"

    log "Downloading ${name} to ${download_path} from ${download_url}"

    curl -L --create-dirs -o "${download_path}" "${download_url}"
}

install_dependencies() {
    local dependencies

    #Checking required modules (RetroOZ uses odroid)
    if id "ark" &>/dev/null || id "odroid" &>/dev/null; then
        dependencies=()

        if ! dpkg -s "dialog" &>/dev/null; then
            dependencies+=("dialog")
        fi
        if ! dpkg -s "curl" &>/dev/null; then
            dependencies+=("curl")
        fi
        if ! dpkg -s "jq" &>/dev/null; then
            dependencies+=("jq")
        fi
        if (( ${#dependencies[@]} )); then
            dialog --clear
            dialog --infobox "Installing dependencies, please wait..." 5 50
            ${sudo_prefix} apt update && ${sudo_prefix} apt install -y "${dependencies[@]}" --no-install-recommends
        fi
    fi
}

dialog() {
    if [[ "${local}" = 1 ]]; then
        command dialog "$@" --input-fd 3 3<"${device}" >"${device}"
    else
        command dialog "$@" 2>&1 >"${device}"
    fi
}

start() {
    local param_device
    local status

    #
    # Load Controls management
    #
    if [[ "${local}" = 0 ]]; then
        if [[ -e "/dev/input/by-path/platform-ff300000.usb-usb-0:1.2:1.0-event-joystick" ]]; then
            param_device="anbernic"
        elif [[ -e "/dev/input/by-path/platform-singleadc-joypad-event-joystick" ]]; then
            param_device="rg552"
        elif [[ -e "/dev/input/by-path/platform-odroidgo2-joypad-event-joystick" ]]; then
            param_device="oga"
        elif [[ -e "/dev/input/by-path/platform-odroidgo3-joypad-event-joystick" ]]; then
            param_device="ogs"
        elif [[ -e "/dev/input/by-path/platform-gameforce-gamepad-event-joystick" ]]; then
            param_device="chi"
        else
            dialog --clear --backtitle "RomMaster - System" --msgbox "Controls can't be loaded, device not recognised. Please report for additional support."
            exit
        fi
        #launch joypad
        ${sudo_prefix} ./tm-joypad RomMaster "${param_device}" > /dev/null 2>&1 &
    fi

    dialog --clear
    dialog --infobox "Initializing, please wait..." 5 50
    sleep 1
    #Checking internet access
    status=$(${sudo_prefix} ping -c 1 google.com &> /dev/null)
    if [[ ${status} -eq 0 ]]; then
        install_dependencies
        main_menu
    else
        dialog --clear --backtitle "RomMaster - System" --msgbox "You appear to be offline, RomMaster require an internet access to run!" 10 50
        exit
    fi
}

main_menu() {
    local cmd
    local options
    local desired_index
    local status

    log "Starting RomMaster"

    cmd=(dialog --no-cancel --backtitle "RomMaster" --title " [ Main Menu ] " --menu "D-pad to move, A for <enter>, B for <space>:" "15" "50" "15")
    options=(
        0 "Find ROMs"
        1 "Settings"
        2 "Exit"
    )

    desired_index=$("${cmd[@]}" "${options[@]}" 2>&1)
    status=$?
    log "Status: ${status}, Desired index: ${desired_index}"

    case ${status} in
    0)
        case ${desired_index} in
        0) systems_menu ;;
        1) settings_menu ;;
        *) exit 0 ;;
        esac
        ;;
    *) exit 1 ;;
    esac
}

systems_menu() {
    local cmd
    local options
    local system_options
    local index
    local system_option
    local desired_index
    local status
    local desired

    log "Selected: Find ROMs"

    cmd=(dialog --no-cancel --backtitle "Pick a system" --title " [ Systems Menu ] " --menu "D-pad to move, A for <enter>, B for <space>:" "15" "50" "15")
    options=()

    system_options=$(echo "${systems}" \
        | jq -r .[].name
    )
    index=0
    while read -r system_option; do
        options+=( $((index++)) "${system_option}")
    done <<< "${system_options}"
    
    desired_index=$("${cmd[@]}" "${options[@]}" 2>&1)
    status=$?
    log "Status: ${status}, Desired index: ${desired_index}"

    desired=$(get_by_index "${systems}" "${desired_index}")

    case ${status} in
    0) items_menu "${desired}" ;;
    *) exit 1 ;;
    esac
}

items_menu() {
    local system
    local name
    local items
    local cmd
    local options
    local item_options
    local index
    local item_option
    local desired_index
    local status
    local desired

    system=$1

    name=$(echo "${system}" \
        | jq -r .name
    )
    log "Selected: ${name}"

    items=$(search_system "${base_query}" "${systems}" "${system}")

    cmd=(dialog --no-cancel --backtitle "Pick an item" --title " [ Items Menu ] " --menu "D-pad to move, A for <enter>, B for <space>:" "15" "100" "15")
    options=()

    item_options=$(echo "${items}" \
        | jq -r .[].title
    )
    index=0
    while read -r item_option; do
        options+=( $((index++)) "${item_option}")
    done <<< "${item_options}"
    
    desired_index=$("${cmd[@]}" "${options[@]}" 2>&1)
    status=$?
    log "Status: ${status}, Desired index: ${desired_index}"

    desired=$(get_by_index "${items}" "${desired_index}")

    case ${status} in
    0) files_menu "${system}" "${desired}" ;;
    1) main_menu ;;
    *) exit 1 ;;
    esac 
}

files_menu() {
    local system
    local desired
    local name
    local files
    local cmd
    local options
    local file_options
    local index
    local file_option
    local desired_index
    local status
    local desired

    system=$1
    item=$2

    name=$(echo "${item}" \
        | jq -r .title
    )
    log "Selected: ${name}"

    files=$(list_files "${system}" "${item}")

    cmd=(dialog --no-cancel --backtitle "Pick a file" --title " [ Files Menu ] " --menu "D-pad to move, A for <enter>, B for <space>:"  "15" "100" "15")
    options=()

    file_options=$(echo "${files}" \
        | jq -r .[].name
    )
    index=0
    while read -r file_option; do
        options+=( $((index++)) "${file_option}")
    done <<< "${file_options}"
    
    desired_index=$("${cmd[@]}" "${options[@]}" 2>&1)
    status=$?
    log "Status: ${status}, Desired index: ${desired_index}"

    desired=$(get_by_index "${files}" "${desired_index}")

    case ${status} in
    0) download_screen "${base_path}" "${system}" "${item}" "${desired}" ;;
    1) item_menu "${system}" ;;
    *) exit 1 ;;
    esac 
}

download_screen() {
    local base_path
    local system
    local item
    local file

    base_path=$1
    system=$2
    item=$3
    file=$4

    name=$(echo "${file}" \
        | jq -r .name
    )
    log "Selected: ${name}"

    download_file "${base_path}" "${system}" "${item}" "${file}" 2>&1 | dialog --progressbox 30 120

    files_menu "${system}" "${item}"
}

settings_menu() {
    local cmd
    local options
    local desired_index
    local status

    log "Selected: Settings"

    cmd=(dialog --no-cancel --backtitle "RomMaster" --title " [ Settings Menu ] " --menu "D-pad to move, A for <enter>, B for <space>:" "15" "50" "15")
    options=(
        0 "Not settings exist"
    )

    desired_index=$("${cmd[@]}" "${options[@]}" 2>&1)
    status=$?
    log "Status: ${status}, Desired index: ${desired_index}"

    case ${status} in
    0)
        case ${desired_index} in
        *) main_menu ;;
        esac
        ;;
    1) main_menu ;;
    *) exit 1 ;;
    esac
}

stop() {
    log "Stopping RomMaster"

    if [[ "${local}" = 0 ]]; then
        if command -v emulationstation &> /dev/null; then
            ${sudo_prefix} systemctl restart emulationstation
        fi
        if command -v emustation &> /dev/null; then
            ${sudo_prefix} systemctl restart emustation
        fi
    fi

    clear > "${device}"
}

clear
trap stop EXIT

config=$(read_config)
base_path=$(echo "${config}" \
    | jq -r .path
)
base_query=$(echo "${config}" \
    | jq -r .query
)
systems=$(echo "${config}" \
    | jq .systems
)

start
