#!/bin/bash

#
# RomMaster
# https://github.com/travis134/RomMaster
# Description : Main script, to be run.
#

#
# Linter
#
# Without this, all of our dialog usages, which redirect stderr to stdout and
# stdout to /dev/tty1 light upp like a Christmas tree.
# shellcheck disable=2069

#
# Includes
#
# shellcheck source=./utils
source ./utils

#
# Environment settings
#
export TERM=linux
sudo chmod 666 /dev/tty1
sudo chmod 666 /dev/uinput
shopt -s extglob # required for extented pattern recognition

#
# Global variables
#
BASE_CACHE=""
BASE_PATH=""
BASE_EXT=""
BASE_QUERY=""
SYSTEMS=""

# Reads config JSON in which contains information about supported systems, the
# expected extensions for suitable roms, and query overrides for better search
# results.
read_config() {
    local config

    config=$(cat config.json)

    echo "${config}"
}

# Reads a JSON array item by index. Mostly used with dialogs for mapping choice
# indices back to data.
get_by_index() {
    local elements
    local index
    local element

    elements=$1
    index=$2

    element=$(
        echo "${elements}" |
            jq --arg index "${index}" .["${index}"]
    )

    echo "${element}"
}

# Creates a query string for eliminating results for all systems except for
# the system desired.
create_system_query() {
    local system
    local query

    system=$1

    query=${BASE_QUERY}
    query+=" "
    query+=$(
        echo "${system}" |
            jq -r '.query'
    )

    # We need to URL encode the special characters using jq.
    echo -n "${query}" |
        jq -sRr @uri
}

# Searches for items that are compatible with a given system.
search_system() {
    local system
    local name
    local query
    local sort
    local projection
    local search_url
    local response
    local results
    local results_count

    system=$1

    name=$(echo "${system}" |
        jq -r .name)

    log "Searching items for system: ${name}"

    query=$(create_system_query "${system}")
    sort="downloads+desc"
    projection="identifier,title"
    search_url="https://archive.org/advancedsearch.php?output=json&q=${query}&fl[]=${projection}&sort[]=${sort}"

    log "Searching with url: ${search_url}"

    # Response body is JSON data formatted as:
    # {
    #   "response": {
    #     "docs": [
    #       {
    #         "identifier": "foo",
    #         "title": "bar"
    #       },
    #       ...
    #     ],
    #     ...
    #   },
    #   ...
    # }
    #
    response=$(curl -s "${search_url}")
    results=$(
        echo "${response}" |
            jq .response.docs
    )
    results_count=$(
        echo "${results}" |
            jq '. | length'
    )
    log "Found ${results_count} matching items for ${name}"

    echo "${results}"
}

# Lists files within a given item.
list_files() {
    local system
    local item
    local ext
    local all_ext
    local item_id
    local metadata_url
    local response
    local results
    local results_count

    system=$1
    item=$2

    ext=$(
        echo "${system}" |
            jq -r .ext
    )
    all_ext="${BASE_EXT} ${ext}"
    all_ext="${all_ext} ${all_ext^^}"
    item_id=$(
        echo "${item}" |
            jq -r .identifier
    )

    metadata_url="https://archive.org/metadata/${item_id}"

    log "Loading metadata with url: ${metadata_url}"

    # Response body is JSON data formatted as:
    # {
    #   "files": [
    #     {
    #       "name": "foo",
    #       "size": "bar",
    #       ...
    #     },
    #   ...
    #   ],
    #   ...
    # }
    response=$(curl -s "${metadata_url}")
    results=$(
        echo "${response}" |
            jq -r --arg all_ext "${all_ext}" '.files
            | map(
                select(.name | split(".")[-1] | inside($all_ext))
                | {name: .name | @uri, size: .size})'
    )
    results_count=$(
        echo "${results}" |
            jq '. | length'
    )
    log "Found ${results_count} matching files in ${item_id}"

    echo "${results}"
}

# Lists files within a given archive.
list_archive_files() {
    local system
    local item
    local file
    local system_id
    local file_name
    local file_name_readable
    local ext
    local all_ext
    local item_id
    local item_name
    local archive_files_url
    local response
    local archive_file_lines
    local archive_file_names
    local archive_files_names_cache_path
    local archive_files_names_cache
    local archive_file_sizes
    local archive_files_sizes_cache_path
    local archive_files_sizes_cache
    local results
    local results_count

    system=$1
    item=$2
    file=$3

    system_id=$(
        echo "${system}" |
            jq -r .id
    )

    file_name=$(
        echo "${file}" |
            jq -r .name
    )
    file_name_readable=$(url_decode "${file_name}")
    ext=$(
        echo "${system}" |
            jq -r .ext
    )
    all_ext="${BASE_EXT} ${ext}"
    all_ext="${all_ext} ${all_ext^^}"
    item_id=$(
        echo "${item}" |
            jq -r .identifier
    )
    item_name=$(
        echo "${item}" |
            jq -r .title
    )

    archive_files_url="https://archive.org/download/${item_id}/${file_name}/"

    log "Loading sub files with url: ${archive_files_url}"

    # Response body is HTML data formatted as:
    # ...
    # <tr><td><a href="foo">bar</a><td><td>baz<td id="size">qux</tr>
    # ...
    response=$(curl -s -L "${archive_files_url}")
    archive_file_lines=$(
        echo "${response}" |
            grep "archive.org/download/${item_id}/${file_name}/"
    )
    if [ -z "${archive_file_lines}" ]; then
        archive_file_lines=$(
            echo "${response}" |
                grep "archive.org/download/${item_id}/${file_name_readable}/"
        )
    fi
    archive_file_names=$(
        echo "${archive_file_lines}" |
            sed -nr 's/.*href="([^"]+)".*/\1/p' |
            jq --raw-input --slurp --arg item_id "${item_id}" 'split("\n")
            | .[0:-1]
            | map(sub("//archive.org/download/\($item_id)/";""))'
    )
    archive_files_names_cache_path="${BASE_CACHE}/${system_id}/${item_id}/${file_name_readable}"
    archive_files_names_cache="${archive_files_names_cache_path}/file_names.json"
    mkdir -p "${items_cache_path}"
    echo "${archive_file_names}" >"${archive_files_names_cache}"
    archive_file_sizes=$(
        echo "${archive_file_lines}" |
            sed -nr 's/.*size">([0-9]+).*/\1/p' |
            jq --raw-input --slurp 'split("\n")
            | .[0:-1]'
    )
    archive_files_sizes_cache_path="${BASE_CACHE}/${system_id}/${item_id}/${file_name_readable}"
    archive_files_sizes_cache="${archive_files_sizes_cache_path}/file_sizes.json"
    mkdir -p "${items_cache_path}"
    echo "${archive_file_sizes}" >"${archive_files_sizes_cache}"
    results=$(
        jq -n \
            --argfile archive_file_names "${archive_files_names_cache}" \
            --argfile archive_file_sizes "${archive_files_sizes_cache}" \
            --arg all_ext "${all_ext}" \
            '[$archive_file_names, $archive_file_sizes]
            | transpose 
            | map({name: .[0], size: .[1]})'
    )
    results_count=$(
        echo "${results}" |
            jq '. | length'
    )
    log "Found ${results_count} matching sub files in ${file_name}"

    echo "${results}"
}

# Download a given file to its corresponding system folder.
download_file() {
    local item
    local file
    local download_path
    local item_id
    local file_name
    local download_url
    local char
    local keep
    local progress

    item=$1
    file=$2
    download_path=$3

    item_id=$(
        echo "${item}" |
            jq -r .identifier
    )
    file_name=$(
        echo "${file}" |
            jq -r .name
    )
    download_url="https://archive.org/download/${item_id}/${file_name}"

    log "Downloading ${file_name} to ${download_path} from ${download_url}"

    curl -L -# --create-dirs -o "${download_path}" "${download_url}" 2>&1 | while IFS= read -r -n 1 char; do
        [[ ${char} =~ [0-9] ]] && keep=1
        [[ ${char} == % ]] && echo "${progress%.*}" && progress="" && keep=0
        [[ ${keep} == 1 ]] && progress="${progress}${char}"
    done
}

install_dependencies() {
    local dependencies

    #Checking required modules (RetroOZ uses odroid)
    if id "ark" &>/dev/null || id "odroid" &>/dev/null; then
        dependencies=()

        if ! dpkg -s "dialog" &>/dev/null; then
            dependencies+=("dialog")
        fi
        if ! dpkg -s "curl" &>/dev/null; then
            dependencies+=("curl")
        fi
        if ! dpkg -s "jq" &>/dev/null; then
            dependencies+=("jq")
        fi
        if ! dpkg -s "grep" &>/dev/null; then
            dependencies+=("grep")
        fi
        if ! dpkg -s "sed" &>/dev/null; then
            dependencies+=("sed")
        fi
        if ((${#dependencies[@]})); then
            dialog --clear
            dialog --infobox "Installing dependencies, please wait..." 5 50 2>&1 >/dev/tty1
            sudo apt update && sudo apt install -y "${dependencies[@]}" --no-install-recommends
        fi
    fi
}

start() {
    local param_device
    local status
    local config

    log "Starting RomMaster"

    #
    # Load Controls management
    #
    if [[ -e "/dev/input/by-path/platform-ff300000.usb-usb-0:1.2:1.0-event-joystick" ]]; then
        param_device="anbernic"
    elif [[ -e "/dev/input/by-path/platform-singleadc-joypad-event-joystick" ]]; then
        param_device="rg552"
    elif [[ -e "/dev/input/by-path/platform-odroidgo2-joypad-event-joystick" ]]; then
        param_device="oga"
    elif [[ -e "/dev/input/by-path/platform-odroidgo3-joypad-event-joystick" ]]; then
        param_device="ogs"
    elif [[ -e "/dev/input/by-path/platform-gameforce-gamepad-event-joystick" ]]; then
        param_device="chi"
    else
        dialog --clear --backtitle "RomMaster - System" --msgbox "Controls can't be loaded, device not recognised. Please report for additional support." 2>&1 >/dev/tty1
        exit 1
    fi
    #launch joypad
    sudo ./tm-joypad RomMaster "${param_device}" >/dev/null 2>&1 &

    dialog --clear
    dialog --infobox "Initializing, please wait..." 5 50 2>&1 >/dev/tty1

    #Checking internet access
    status=$(sudo ping -c 1 google.com &>/dev/null)
    if [[ ${status} -ne 0 ]]; then
        dialog --clear --backtitle "RomMaster - System" --msgbox "You appear to be offline, RomMaster require an internet access to run" 10 50 2>&1 >/dev/tty1
        exit 1
    fi

    log "Installing dependencies"
    install_dependencies

    log "Reading config"
    config=$(read_config)
    BASE_CACHE=$(
        echo "${config}" |
            jq -r .cache
    )
    BASE_EXT=$(
        echo "${config}" |
            jq -r .ext
    )
    BASE_PATH=$(
        echo "${config}" |
            jq -r .path
    )
    BASE_QUERY=$(
        echo "${config}" |
            jq -r .query
    )
    SYSTEMS=$(
        echo "${config}" |
            jq .systems
    )

    log "Creating cache directory"
    mkdir -p "${BASE_CACHE}"

    main_menu
}

main_menu() {
    local cmd
    local options
    local index
    local status

    log "Showing Main Menu"

    cmd=(dialog --no-cancel --backtitle "RomMaster" --title " [ Main Menu ] " --menu "D-pad to move, A for <enter>, B for <space>:" "15" "50" "15")
    options=(
        0 "Find ROMs"
        1 "Clear cache"
        2 "Exit"
    )

    index=$("${cmd[@]}" "${options[@]}" 2>&1 >/dev/tty1)
    status=$?
    log "Status: ${status}, Desired index: ${index}"

    case ${status} in
    0)
        case ${index} in
        0) systems_menu ;;
        1)
            log "Clearing cache: ${BASE_CACHE}"
            rm -rf "${BASE_CACHE}"
            mkdir -p "${BASE_CACHE}"
            dialog --backtitle "RomMaster" --msgbox "Cache cleared" 7 50 2>&1 >/dev/tty1
            main_menu
            ;;
        *) exit 0 ;;
        esac
        ;;
    *) exit 1 ;;
    esac
}

systems_menu() {
    local cmd
    local options
    local system_options
    local index
    local system_option
    local index
    local status
    local system

    log "Selected: Find ROMs"

    cmd=(dialog --cancel-label "Back" --backtitle "Pick a system" --title " [ Systems Menu ] " --menu "D-pad to move, A or B to select" "15" "50" "15")
    options=()

    system_options=$(
        echo "${SYSTEMS}" |
            jq -r .[].name
    )
    index=0
    while read -r system_option; do
        options+=($((index++)) "${system_option}")
    done <<<"${system_options}"

    index=$("${cmd[@]}" "${options[@]}" 2>&1 >/dev/tty1)
    status=$?
    log "Status: ${status}, Desired index: ${index}"

    system=$(get_by_index "${SYSTEMS}" "${index}")

    case ${status} in
    0) items_menu "${system}" ;;
    1) main_menu ;;
    *) exit 1 ;;
    esac
}

items_menu() {
    local system
    local system_name
    local system_id
    local items_cache_path
    local items_cache
    local items
    local cmd
    local options
    local item_options
    local index
    local item_option
    local index
    local status
    local item

    system=$1

    system_name=$(
        echo "${system}" |
            jq -r .name
    )
    log "Selected: ${system_name}"

    system_id=$(
        echo "${system}" |
            jq -r .id
    )

    items_cache_path="${BASE_CACHE}/${system_id}"
    mkdir -p "${items_cache_path}"
    items_cache="${items_cache_path}/items.json"
    if [[ -f "$items_cache" ]]; then
        log "Reading items for ${system_name} from cache: ${items_cache}"
        items=$(cat "${items_cache}")
    else
        dialog --infobox "Loading items for ${system_name}, please wait..." 5 50 2>&1 >/dev/tty1
        items=$(search_system "${system}")
        echo "${items}" >"${items_cache}"
    fi

    cmd=(dialog --cancel-label "Back" --backtitle "Pick an item" --title " [ Items Menu ] " --menu "D-pad to move, A or B to select" "15" "75" "15")
    options=()

    item_options=$(
        echo "${items}" |
            jq -r .[].title
    )
    index=0
    while read -r item_option; do
        options+=($((index++)) "${item_option}")
    done <<<"${item_options}"

    index=$("${cmd[@]}" "${options[@]}" 2>&1 >/dev/tty1)
    status=$?
    log "Status: ${status}, Desired index: ${index}"

    item=$(get_by_index "${items}" "${index}")

    case ${status} in
    0) files_menu "${system}" "${item}" ;;
    1) systems_menu ;;
    *) exit 1 ;;
    esac
}

files_menu() {
    local system
    local item
    local item_name
    local system_id
    local item_id
    local files_cache_path
    local files_cache
    local files
    local cmd
    local options
    local file_options
    local index
    local file_option
    local file_option_readable
    local index
    local status
    local file

    system=$1
    item=$2

    item_name=$(
        echo "${item}" |
            jq -r .title
    )
    log "Selected: ${item_name}"

    system_id=$(
        echo "${system}" |
            jq -r .id
    )
    item_id=$(
        echo "${item}" |
            jq -r .identifier
    )

    files_cache_path="${BASE_CACHE}/${system_id}/${item_id}"
    mkdir -p "${files_cache_path}"
    files_cache="${files_cache_path}/files.json"
    if [[ -f "$files_cache" ]]; then
        log "Reading files for ${item_name} from cache: ${files_cache}"
        files=$(cat "${files_cache}")
    else
        dialog --infobox "Loading files for ${item_name}, please wait..." 5 50 2>&1 >/dev/tty1
        files=$(list_files "${system}" "${item}")
        echo "${files}" >"${files_cache}"
    fi

    cmd=(dialog --cancel-label "Back" --backtitle "Pick a file" --title " [ Files Menu ] " --menu "D-pad to move, A or B to select" "15" "75" "15")
    options=()

    file_options=$(
        echo "${files}" |
            jq -r .[].name
    )
    index=0
    while read -r file_option; do
        file_option_readable=$(url_decode "${file_option}")
        options+=($((index++)) "${file_option_readable}")
    done <<<"${file_options}"

    index=$("${cmd[@]}" "${options[@]}" 2>&1 >/dev/tty1)
    status=$?
    log "Status: ${status}, Desired index: ${index}"

    file=$(get_by_index "${files}" "${index}")

    case ${status} in
    0) file_screen "${system}" "${item}" "${file}" ;;
    1) items_menu "${system}" ;;
    *) exit 1 ;;
    esac
}

file_screen() {
    local system
    local item
    local file
    local file_name
    local file_name_readable
    local file_size
    local file_size_readable
    local extra
    local status

    system=$1
    item=$2
    file=$3

    file_name=$(
        echo "${file}" |
            jq -r .name
    )
    file_name_readable=$(url_decode "${file_name}")
    log "Selected: ${file_name_readable}"

    file_size=$(
        echo "${file}" |
            jq -r .size
    )
    file_size_readable=$(parse_size "${file_size}")

    # Archive.org only provides sub file navigation for archive files.
    extra=()
    if [[ $file_name == *.zip || $file_name == *.7z ]]; then
        extra=("--extra-button" "--extra-label" "Open")
    fi

    dialog --backtitle "Pick an action" --title " [ File Information ] " --yes-label "Download" --ok-label "Download" --no-label "Back" --cancel-label "Back" "${extra[@]}" --yesno "File Name: ${file_name_readable}\nSize: ${file_size_readable}" 15 50 2>&1 >/dev/tty1
    status=$?
    log "Status: ${status}"

    case ${status} in
    0) download_screen "${system}" "${item}" "${file}" ;;
    1) files_menu "${system}" "${item}" ;;
    3) open_file_screen "${system}" "${item}" "${file}" ;;
    *) exit 1 ;;
    esac
}

open_file_screen() {
    local system
    local item
    local file
    local file_name
    local file_name_readable
    local system_id
    local item_id
    local archive_files_cache_path
    local archive_files_cache
    local archive_files
    local cmd
    local options
    local archive_file_options
    local archive_file_option_readable
    local index
    local archive_file_option
    local index
    local status
    local archive_file

    system=$1
    item=$2
    file=$3

    file_name=$(
        echo "${file}" |
            jq -r .name
    )
    file_name_readable=$(url_decode "${file_name}")
    log "Selected: ${file_name_readable}"

    system_id=$(
        echo "${system}" |
            jq -r .id
    )
    item_id=$(
        echo "${item}" |
            jq -r .identifier
    )

    archive_files_cache_path="${BASE_CACHE}/${system_id}/${item_id}/${file_name_readable}"
    mkdir -p "${archive_files_cache_path}"
    archive_files_cache="${archive_files_cache_path}/archive_files.json"
    if [[ -f "$archive_files_cache" ]]; then
        log "Reading files for ${item_name} from cache: ${archive_files_cache}"
        archive_files=$(cat "${archive_files_cache}")
    else
        dialog --infobox "Loading sub files for ${file_name_readable}, please wait..." 5 50 2>&1 >/dev/tty1
        archive_files=$(list_archive_files "${system}" "${item}" "${file}")
        echo "${files}" >"${archive_files_cache}"
    fi

    cmd=(dialog --cancel-label "Back" --backtitle "Pick a sub file" --title " [ Files Menu ] " --menu "D-pad to move, A or B to select" "15" "75" "15")
    options=()

    archive_file_options=$(
        echo "${archive_files}" |
            jq -r .[].name
    )
    index=0
    while read -r archive_file_option; do
        archive_file_option_readable=$(url_decode "${archive_file_option}")
        options+=($((index++)) "${archive_file_option_readable}")
    done <<<"${archive_file_options}"

    index=$("${cmd[@]}" "${options[@]}" 2>&1 >/dev/tty1)
    status=$?
    log "Status: ${status}, Desired index: ${index}"

    archive_file=$(get_by_index "${archive_files}" "${index}")

    case ${status} in
    0) file_screen "${system}" "${item}" "${archive_file}" true ;;
    1) files_menu "${system}" "${item}" ;;
    *) exit 1 ;;
    esac
}

download_screen() {
    local system
    local item
    local file
    local file_name
    local file_name_readable
    local base_file_name
    local system_path
    local download_path

    system=$1
    item=$2
    file=$3

    file_name=$(
        echo "${file}" |
            jq -r .name
    )
    log "Selected: ${file_name}"

    # When we download a file named foo/bar/baz.zip, we want to emplace it at
    # ${path}/baz.zip, stripping off the foo/bar part.
    file_name_readable=$(url_decode "${file_name}")
    base_file_name=$(basename "${file_name_readable}")

    system_path=$(echo "${system}" |
        jq -r .path)
    download_path="${BASE_PATH}/${system_path}/${base_file_name}"

    download_file "${item}" "${file}" "${download_path}" | dialog --gauge "Downloading ${file_name}, please wait..." 7 75 0 2>&1 >/dev/tty1

    downloaded_screen "${system}" "${item}" "${file}" "${download_path}"
}

downloaded_screen() {
    local system
    local item
    local file
    local download_path
    local file_name
    local status

    system=$1
    item=$2
    file=$3
    download_path=$4

    file_name=$(
        echo "${file}" |
            jq -r .name
    )
    log "Downloaded: ${file_name}"

    dialog --backtitle "Download complete" --title " [ ${base_file_name} ] " --yesno "The selected file has been downloaded to ${download_path}. Do you want to exit so you can play it now?" 15 50 2>&1 >/dev/tty1
    status=$?
    log "Status: ${status}"

    case ${status} in
    0) exit 0 ;;
    1) files_menu "${system}" "${item}" ;;
    *) exit 1 ;;
    esac
}

stop() {
    log "Stopping RomMaster"

    $sudo_prefix pkill tm-joypad >/dev/null 2>&1

    if [[ $(systemctl is-active emulationstation.service) = "active" ]]; then
        sudo systemctl restart emulationstation
    fi
    if [[ $(systemctl is-active emustation.service) = "active" ]]; then
        sudo systemctl restart emustation
    fi

    clear >/dev/tty1
}

clear
trap stop EXIT
start
